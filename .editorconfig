# EditorConfig is awesome: http://EditorConfig.org
# top-most EditorConfig file
root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
charset = utf-8
trim_trailing_whitespace = true
trim_trailing_white_space_on_save = true
draw_white_space = ll

# JS Files
[*.js]
quote_type = single

# MarkDown Files
[*.md]
trim_trailing_whitespace = false
